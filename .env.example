# Distributed Function Runtime Configuration
# Copy this file to .env and customize for your environment

# Network Configuration
DEFAULT_PORT=8080
DEFAULT_HOST=127.0.0.1
BIND_ADDRESS=0.0.0.0

# Production Network Settings
PRODUCTION_HOST=0.0.0.0
PRODUCTION_PORT=8080

# RPC Configuration  
RPC_TIMEOUT_SECONDS=30.0
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY=1.0

# Function Execution
FUNCTION_EXECUTION_TIMEOUT=30.0
FUNCTION_MAX_MEMORY_MB=512

# Heartbeat Configuration
HEARTBEAT_INTERVAL_SECONDS=30.0
HEARTBEAT_TIMEOUT_SECONDS=90.0
NODE_CLEANUP_INTERVAL_SECONDS=60.0

# Resource Monitoring Thresholds
CPU_USAGE_THRESHOLD=80.0
MEMORY_USAGE_THRESHOLD=90.0
DISK_USAGE_THRESHOLD=85.0

# File Paths
REGISTRY_FILE_PATH=./data/registry.json
LOG_FILE_PATH=./logs/distributed_runtime.log
FUNCTION_CACHE_PATH=./cache/functions

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ENABLE_REQUEST_VALIDATION=true
MAX_REQUEST_SIZE_MB=10

# Development vs Production
ENVIRONMENT=development
DEBUG_MODE=false
ENABLE_METRICS=true

# Cluster Configuration (for multi-node setups)
CLUSTER_NAME=distro-cluster
NODE_DISCOVERY_MODE=heartbeat
REGISTRY_TYPE=file

# Performance Tuning
MAX_CONCURRENT_FUNCTIONS=10
WORKER_THREAD_POOL_SIZE=4
CONNECTION_POOL_SIZE=10